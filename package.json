    "lint": "tslint -t stylish ./{,test}/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/typed-typings/npm-validator.git"
  },
  "author": "Louay Alakkad <louay@alakkad.me>",
  "bugs": {
    "url": "https://github.com/typed-typings/npm-validator/issues"
  },
  "homepage": "https://github.com/typed-typings/npm-validator#readme",
  "devDependencies": {
    "tslint": "^3.15.1",
    "tslint-config-typings": "^0.2.4",
    "typescript": "^1.8.10",
    "typings": "^1.3.3"
  }
}
